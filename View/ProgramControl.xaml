<UserControl x:Class="WpfApp.View.ProgramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <ListView ItemsSource="{Binding ProgramData}" Margin="15,15,15,15" >
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Label Background="Red">Lable</Label>
                <TextBox Text="{Binding s_Desc}"></TextBox>
                <TextBlock Text="{Binding n_Amount}"></TextBlock>
                <Button Command="{Binding WindowLoaded}">Click</Button>
                
            </StackPanel>
            
        </ListView>
            
    </Grid>
</UserControl>
